{
  "name": "discord-bot-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "ticketbot",
    "discordhooks",
    "frontend"
  ],
  "scripts": {
    "ticketbot:start": "npm run start -w ticketbot",
    "ticketbot:dev": "npm run dev -w ticketbot",
    "ticketbot:deploy": "npm run deploy -w ticketbot",
    "hooks:start": "npm run start -w discordhooks",
    "hooks:dev": "npm run dev -w discordhooks",
    "frontend:dev": "npm run dev -w frontend",
    "frontend:build": "npm run build -w frontend",
    "dev": "concurrently -n ticketbot,hooks,frontend -c yellow,blue,green \"npm run ticketbot:dev\" \"npm run hooks:dev\" \"npm run frontend:dev\"",
    "start": "concurrently -n ticketbot,hooks,frontend -c yellow,blue,green \"npm run ticketbot:start\" \"npm run hooks:start\" \"npm run frontend:dev\"",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=22.12.0"
  }
}
